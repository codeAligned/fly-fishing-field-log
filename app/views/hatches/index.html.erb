<html>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a id="custom_nav" class="navbar-brand" href="<%= user_path(session[:user_id]) %>"/> Back to Profile</a>
        <a id="custom_nav" class="navbar-brand" href="<%= rivers_path %>"/> See River Conditions</a>
        <a id="custom_nav" class="navbar-brand" href="<%= logout_path %>"/> Log Out</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
           <!--  nav here -->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="hatch-data">
      <br>
      <br>
      <h1>Colorado Hatches</h1>
      <table class="hatch-table">
        <th id="hatch-header">Bug Type</th>
        <th id="hatch-header">Name</th>
        <th id="hatch-header">Color</th>
        <th id="hatch-header">Dates</th>
        <th id="hatch-header">Emergence</th>
        <th id="hatch-header">Size</th>
        <th id="hatch-header">Spinner Fall</th>
        <br>
          <% @hatches.each do |hatch| %>
            <tr>
              <td id="hatch-bug">
                <%= hatch.bug_type %>
              </td>
              <td id="hatch-name">
                <%= hatch.name %>
              </td>
              <td id="hatch-color">
                <%= hatch.color %>
              </td>
              <td id="hatch-dates">
                <%= hatch.dates %>
              </td>
              <td id="hatch-emergence">
                <%= hatch.emergence %>
              </td>
              <td id="hatch-size">
                <%= hatch.size %>
              </td>
              <td id="hatch-spinnerfall">
                <%= hatch.spinner_fall %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </body>
</html>
