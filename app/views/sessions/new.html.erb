<div class='home'>
  <br>
  <br>
  <br>
  <br>

  <h2>Sign In</h2>
  <br>
    <%= form_tag '/sessions' do %>
      <%= label_tag :name %>
      <%= text_field_tag 'user[name]' %>
      <br>
      <%= label_tag :password %>
      <%= password_field_tag 'user[password]' %>
      <br>
      <br>
      <%= submit_tag "Log In"%>
    <% end %>

  <h3><%= flash[:message] %></h3>

  <br>
  <br>
  <h2>Sign Up!</h2>
  <p><%= link_to "New User Sign Up", new_user_path %></p>
  <br>
  <br>
  <br>
</div>
